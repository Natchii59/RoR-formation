<h1>Éditer la catégorie</h1>

<%= form_for @category do |f| %>

  <div class="mb-3">
    <label class="form-label">Titre de la catégorie</label>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <label class="form-label">Contenu de la catégorie</label>
    <%= f.text_area :slug, class: "form-control" %>
  </div>

  <button type="submit" class="btn btn-success">Mettre à jour la catégorie</button>

<% end %>
